<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cadastro"
    android:orientation="vertical">


    <TextView
        android:id="@+id/titulo"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:text="@string/cadastre_uma_arvore"
        android:textStyle="bold|italic"
        android:textColor="#000000"
        android:textSize="30sp">
    </TextView>

    <TextView
        android:id="@+id/descricao"
        android:layout_width="400dp"
        android:layout_height="120dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:text="@string/Desc"
        android:textColor="#000000"
        android:textSize="24sp">
    </TextView>

    <!-- No Futuro mudar pra um List View com Busca-->>
    <Spinner
        android:id="@+id/tipo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="235dp"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:entries= "@array/labels_tipos"
        android:prompt= "@string/tipo_de_arvore"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/acesso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="100dp"
        android:text="Acesso:"
        android:textSize="18sp"

        />
    <RatingBar
        android:id="@+id/R_acesso"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="280dp"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize="0.3" />

    <!--

    <Spinner
        android:id="@+id/acesso"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginTop="280dp"
        android:layout_centerHorizontal="true"
        android:entries="@array/labels_acesso"
        android:hint="@string/acesso"
        android:textSize="16sp" />
  -->>
    <Spinner
        android:id="@+id/quali_fruta"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="330dp"
        android:entries="@array/labels_quali"
        android:hint="@string/qualidade_da_fruta"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/quant_fruta"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="375dp"
        android:entries="@array/labels_quant"
        android:hint="@string/quantidade_de_frutas"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/extra"
        android:inputType="textAutoComplete"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_marginTop="420dp"
        android:layout_centerHorizontal="true"
        android:hint="@string/comentario_extra"
        android:textAlignment="center"
        android:textSize="26sp" />

    <Button
        android:id="@+id/localizacao"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="580dp"
        android:layout_centerHorizontal="true"
        android:text="@string/cadastrar"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:background="#4875B4" />


</RelativeLayout>